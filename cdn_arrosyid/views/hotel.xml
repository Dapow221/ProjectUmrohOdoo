<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>

    <record id="cdn_hotel_view_kanban" model="ir.ui.view">
            <field name="name">cdn.hotel.view.kanban</field>
            <field name="model">cdn.hotel</field>
            <field name="arch" type="xml">
                <kanban string="Kanban Description">
                    <field name="company_id"/>
                    <field name="keterangan"/>
                    <field name="harga"/>
                    <field name="phone"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_record_has_image_fill">
                                <div class="oe_kanban_details">
                                    <h4>
                                        <a type="open"><field name="company_id"/></a>
                                    </h4>
                                    <ul>
                                        <li>
                                            <span class="text-muted">Keterangan</span> <field name="keterangan"/>
                                        </li>
                                        <li>
                                            <span class="text-muted">Harga</span> <field name="harga"/>
                                        </li>
                                        <li>
                                            <span class="text-muted">Phone</span> <field name="phone"/>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                    </kanban>
            </field>
        </record>
    
        <!-- cdn.hotel tree view -->
        <record id="cdn_hotel_view_tree" model="ir.ui.view">
            <field name="name">cdn.hotel.view.tree</field>
            <field name="model">cdn.hotel</field>
            <field name="arch" type="xml">
                <tree>
                    <!-- Add your fields here -->
                    <field name="company_id"/>
                    <field name="type"/>
                    <field name="keterangan"/>
                    <field name="harga"/>
                </tree>
            </field>
        </record>
        
        <!-- cdn.hotel form view -->
        <record id="cdn_hotel_view_form" model="ir.ui.view">
            <field name="name">cdn.hotel.view.form</field>
            <field name="model">cdn.hotel</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                    <field name="image" widget="image" class="oe_avatar"/>
                    <group>
                        <group>
                            <!-- Add your fields here -->
                            <field name="company_id"/>
                            <field name="type"/>
                            <field name="keterangan"/>
                            <field name="harga"/>
                        </group>
                        <group>
                            <field name="street"/>
                            <field name="city"/>
                            <field name="zip"/>
                            <field name="country_id"/>
                            <field name="phone" widget="phone"/>
                            <field name="email" widget="email"/>
                        </group>
                    </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- cdn.hotel action window -->
        <record id="cdn_hotel_action" model="ir.actions.act_window">
            <field name="name">Hotel</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">cdn.hotel</field>
            <field name="view_mode">tree,form,kanban</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    <!-- Add Text Here -->
                </p><p>
                    <!-- More details about what a user can do with this object will be OK --> 
                
                </p>
            </field>
        </record>

        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="hotel_menu_act" name="Hotel" parent="travel_pengaturan_menu_categ" action="cdn_hotel_action" sequence="20"/>
    </data>
</odoo>

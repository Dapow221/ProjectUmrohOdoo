<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <!-- register -->
        <template id="login" inherit_id="web.login" name="Custom Login" >
            <xpath expr="//div[hasclass('o_login_auth')]" position="after">
                 <button string="daftar" type="button" class="btn btn-primary">
                    <a href="/signup" class="nav-link" style="color: white">Daftar</a>
                 </button>
           </xpath>
            <xpath expr="//div[hasclass('field-login')]" position="before">
                 <h5 class="text-center gap-1 d-grid mb-1">Login</h5>
           </xpath>
       </template>  
        <!-- navbar -->
        <template id="layout" name="Main layout" inherit_id="portal.frontend_layout">
            <xpath expr="//div[@id='top_menu_container']" position="replace">
                <a href="/" class="navbar-brand logo me-4">
                    <span role="img" aria-label="Travel Umroh" title="Travel Umroh" data-oe-model="cdn_arrosyid" data-oe-id="1" data-oe-field="logo" data-oe-type="image" data-oe-expression="cdn_arrosyid.logo"><img src="/cdn_arrosyid/static/src/img/logo-web.png" class="img img-fluid" width="95" height="40" alt="My Website" loading="lazy"/></span>
                </a>
                <div id="top_menu_collapse" class="collapse navbar-collapse order-last order-lg-0">
                    <ul id="top_menu" role="menu" class="nav navbar-nav o_menu_loading flex-grow-1">                    
                        <li role="presentation" class="nav-item">
                            <a role="menuitem" href="/" class="nav-link">
                                <span data-oe-model="website.menu" data-oe-id="5" data-oe-field="name" data-oe-type="char" data-oe-expression="submenu.name">Home</span>
                            </a>
                        </li>
                        <li role="presentation" class="nav-item">
                            <a role="menuitem" href="/sesi_umroh" class="nav-link ">
                                <span data-oe-model="website.menu" data-oe-id="10" data-oe-field="name" data-oe-type="char" data-oe-expression="submenu.name">Sesi Umroh</span>
                            </a>
                        </li>
                        <li role="presentation" class="nav-item">
                            <a role="menuitem" href="/ketentuan" class="nav-link ">
                                <span data-oe-model="website.menu" data-oe-id="13" data-oe-field="name" data-oe-type="char" data-oe-expression="submenu.name">Ketentuan Umum</span>
                            </a>
                        </li>
                        <li role="presentation" class="nav-item">
                            <a role="menuitem" href="/pendaftaran" class="nav-link ">
                                <span data-oe-model="website.menu" data-oe-id="14" data-oe-field="name" data-oe-type="char" data-oe-expression="submenu.name">Pendaftaran</span>
                            </a>
                        </li>
                    </ul>
                    <ul id="top_menu" class="nav navbar-nav ms-auto">
                        <t t-call="portal.placeholder_user_sign_in">
                            <t t-set="_item_class" t-value="'nav-item'"/>
                            <t t-set="_link_class" t-value="'nav-link'"/>
                        </t>
                        <t t-call="portal.user_dropdown">
                            <t t-set="_user_name" t-value="true"/>
                            <t t-set="_item_class" t-value="'nav-item dropdown'"/>
                            <t t-set="_link_class" t-value="'nav-link'"/>
                            <t t-set="_dropdown_menu_class" t-value="'dropdown-menu-end'"/>
                        </t>
                    </ul>   
                </div>
             </xpath>
        </template>
    
        <!-- content -->
        <template id="homepages" name="Home Page">
            <t t-call="website.layout">

                        <div id="wrap" class="oe_structure" data-oe-model="ir.ui.view" data-oe-id="825" data-oe-field="arch" data-oe-xpath="/t[1]/t[1]/div[1]">
                        <section class="s_banner parallax s_parallax_is_fixed o_cc o_cc3" data-scroll-background-ratio="1" data-oe-shape-data="{&#34;shape&#34;:&#34;web_editor/Origins/18&#34;,&#34;flip&#34;:[&#34;x&#34;]}" data-snippet="s_banner">
                            <span class="s_parallax_bg oe_img_bg" style="background-image: url(&#39;cdn_arrosyid/static/src/img/background_homepage.jpg&#39;); background-position: 50% 0;"></span>
                                <div class="o_we_bg_filter bg-black-50"></div>
                                    <div class="o_we_shape o_web_editor_Origins_18 o_we_flip_x o_header_extra_shape_mapping"></div>
                                        <div class="container">
                                            <div class="row s_nb_column_fixed">
                                                <div class="col-lg-7 h-100 pt160 pb160" data-name="Box">
                                                    <h1> <b>Travel Umroh<br/>AR ROSYID TOUR</b></h1>
                                                    <p class="lead">In Syaa Allah, Haji dan Umroh yang Nyaman <br/></p>
                                                </div>
                                            </div>
                                        </div>
                        </section>   

                        <section class="s_text_block pt40 pb40 o_cc o_cc4 pb56 pt56" data-snippet="s_text_block" style="background-color: #03172c">
                            <div class="container s_allow_columns" style="color: white">
                                <h1 class="text-center">Fasilitator Para Tamu-Tamu Allah</h1>
                                <p class="text-center">Jumlah penduduk muslim Indonesia sebanyak 200 juta menjadikan ini sebagai amanah bagi kami para fasilitator para tamu-tamu Allah. Meski banyak penyelenggara Haji Khusus dan Umroh yang juga berkomitmen untuk memberikan pelayanan terbaik bagi seluruh Jemaahnya. Pusat Umroh Indonesia hadir bersama mitra terbaik untuk memberikan solusi layanan penyelenggara Haji Khusus dan Umroh bagi kaum muslimin semua dengan niat tulus sebagai fasilitator terbaik untuk para tamu-tamu Allahyang mulia. Semoga ini menjadi ladang pahala bagi kami semua. Aamiin Allahumma Aamiin.</p>
                            </div>
                        </section>

                        <section class="s_text_block pt40 pb40 o_cc o_cc4 pb56 pt56" data-snippet="s_text_block" style="background-color: white">
                            <div class="container s_allow_columns" style="color: black">
                                <h1 class="text-center">Nilai Lebih Kami</h1>
                                <p class="text-center">Sebagai penyelenggara perjalanan ibadah Haji Khusus dan Umroh tentunya kami harus memiliki komitmen serta visi dan misi yang dapat menjadikan kami sebagai pilihan, berikut ini kenapa Anda harus menjadikan Pusat Umroh Indonesia sebagai pilihan terbaik bagi pelayan ibadah Haji dan Umroh anda.</p>
                            </div>
                        </section>

                        <section class="s_text_image pt48 pb0" data-snippet="s_text_image">
                            <div class="container">
                                <div class="row align-items-center">
                                    <div class="col-lg-6 pt16 pb16">
                                        <h2>Harga Realistis</h2>
                                        <p>Kami bukan fokus di harga yang murah, melainkan realistis demi kenyamanan dan keamanan para tamu-tamu Allah. <br/></p>
                                    </div>
                                    <div class="col-lg-6 pt16 pb16">
                                        <img src="/cdn_arrosyid/static/src/img/jamaah.jpg?c2=o-color-3" class="img img-fluid mx-auto" alt="" data-shape="cdn_arrosyid/solid/sld_square_1" data-original-mimetype="image/jpeg" data-file-name="s_text_image.svg" data-shape-colors=";o-color-3;;;" loading="lazy"/>
                                    </div>
                                </div>
                            </div>
                        </section>

                        <section class="s_text_image pt32 o_cc o_cc1 pb48 pt48" data-snippet="s_image_text">
                            <div class="container">
                                <div class="row align-items-center">
                                    <div class="col-lg-6 pt16 pb16">
                                        <img src="/cdn_arrosyid/static/src/img/kabbah.jpg?c2=o-color-3" class="img img-fluid mx-auto" alt="" data-shape="cdn_arrosyid/solid/sld_square_1" data-original-mimetype="image/jpeg" data-file-name="s_text_image.svg" data-shape-colors=";o-color-3;;;" loading="lazy"/>
                                    </div>
                                    <div class="col-lg-6 pt16 pb16">
                                        <h2>Tim Professional</h2>
                                        <p>Dibimbing oleh Ustadz yang professional, lulusan Universitas Islam Madinah, Universitas Ummul Qura, Universitas Al-Azhar Mesir.</p>
                                    </div>
                                </div>
                            </div>
                        </section>
                        <section class="s_quotes_carousel_wrapper" data-vxml="001" data-vcss="001" data-snippet="s_quotes_carousel">
                            <div class="s_quotes_carousel s_carousel_default carousel slide o_cc o_cc2" data-bs-interval="10000" id="myQuoteCarousel664899">
                                <ol class="carousel-indicators">
                                    <li data-bs-slide-to="0" class="active" data-bs-target="#myQuoteCarousel664899"></li>
                                    <li data-bs-slide-to="1" data-bs-target="#myQuoteCarousel664899"></li>
                                    <li data-bs-slide-to="2" data-bs-target="#myQuoteCarousel664899"></li>
                                </ol>
                                <div class="carousel-inner">        
                                    <div class="carousel-item active oe_img_bg o_bg_img_center pt80 pb80" style="background-image: url(&#39;/cdn_arrosyid/static/src/img/umroh1.jpg&#39;); background-position: 50% 50%;" data-name="Slide">
                                            <div class="container">
                                                <blockquote class="s_blockquote s_blockquote_classic blockquote mx-auto w-50" data-name="Blockquote">
                                                    <i class="fa fa-1x fa-quote-left rounded float-start bg-o-color-2 s_blockquote_icon"></i>
                                                    <div class="s_blockquote_content o_cc1">
                                                        <p>
                                                            Paket umroh sangat berkah di Travel Arrosyid
                                                        </p>
                                                        <footer class="blockquote-footer">
                                                            <img src="/web/image/website.s_quotes_carousel_demo_image_3" class="s_blockquote_avatar img rounded-circle me-2" alt="" loading="lazy"/>
                                                            <span class="s_blockquote_author">
                                                            <b>Azisah</b> • Jamaah dari Jakarta
                                                        </span>
                                                        </footer>
                                                </div>
                                            </blockquote>
                                        </div>
                                    </div>
                                    <div class="carousel-item oe_img_bg o_bg_img_center pt80 pb80" style="background-image: url(&#39;/cdn_arrosyid/static/src/img/umroh2.jpg&#39;); background-position: 50% 50%;" data-name="Slide">
                                        <div class="container">
                                            <blockquote class="s_blockquote s_blockquote_classic blockquote me-auto w-50" data-name="Blockquote">
                                                <i class="fa fa-1x fa-quote-left rounded float-start bg-o-color-2 s_blockquote_icon"></i>
                                                <div class="s_blockquote_content o_cc1">
                                                    <p>
                                                        Fasilitas sangat lengkap!!!
                                                    </p>
                                                    <footer class="blockquote-footer">
                                                        <img src="/web/image/website.s_quotes_carousel_demo_image_4" class="s_blockquote_avatar img rounded-circle me-2" alt="" loading="lazy"/>
                                                        <span class="s_blockquote_author">
                                                          <b>M. Alli</b> • Jamaah dari Malang
                                                        </span>
                                                    </footer>
                                                </div>
                                            </blockquote>
                                        </div>
                                    </div>                    
                                    <div class="carousel-item oe_img_bg o_bg_img_center pt80 pb80" style="background-image: url(&#39;/cdn_arrosyid/static/src/img/umroh3.jpg&#39;); background-position: 50% 50%;" data-name="Slide">
                                        <div class="container">
                                            <blockquote class="s_blockquote s_blockquote_classic blockquote ms-auto w-50" data-name="Blockquote">
                                                <i class="fa fa-1x fa-quote-left rounded float-start bg-o-color-2 s_blockquote_icon"></i>
                                                <div class="s_blockquote_content o_cc1">
                                                    <p>Barokah bareng-bareng</p>
                                                    <footer class="blockquote-footer">
                                                        <img src="/web/image/website.s_quotes_carousel_demo_image_5" class="s_blockquote_avatar img rounded-circle me-2" alt="" loading="lazy"/>
                                                        <span class="s_blockquote_author">
                                                          <b>Noor</b> • Jamaah dari Surabaya
                                                        </span>
                                                    </footer>
                                                </div>
                                            </blockquote>
                                        </div>
                                    </div>
                                </div>
                                                    
                                <div class="carousel-control-prev o_not_editable" data-bs-slide="prev" role="img" aria-label="Previous" title="Previous" data-bs-target="#myQuoteCarousel664899">
                                    <span class="carousel-control-prev-icon"></span>
                                    <span class="visually-hidden">Sebelumnya</span>
                                </div>
                                
                                <div class="carousel-control-next o_not_editable" data-bs-slide="next" role="img" aria-label="Next" title="Next" data-bs-target="#myQuoteCarousel664899">
                                    <span class="carousel-control-next-icon"></span>
                                    <span class="visually-hidden">Selanjutnya</span>
                                </div>
                            </div>
                        </section>
                    </div>
                </t>
        </template>

        <!-- Footer -->
        <template id="template_footer_contact" inherit_id="website.layout" name="Contact" active="True">
            <xpath expr="//div[@id='footer']" position="replace">
                <div id="footer" class="oe_structure oe_structure_solo" t-ignore="true" t-if="not no_footer">
                    <section class="s_text_block pt32 pb16" data-snippet="s_text_block" data-name="Text">
                        <div class="container">
                            <div class="row align-items-end">
                                <div class="col-lg-3 pt16 pb16">
                                    <p class="mb-2">Apa yang bisa kami bantu?</p>
                                    <h4>Hubungi kami kapanpun</h4>
                                </div>
                                <div class="col-lg-3 pt16 pb16">
                                    <p class="mb-2">Hubungi kami :</p>
                                    <h5 style="color: white;"><span class="o_force_ltr"><a style="color: inherit;" href="tel:+62 81234567891">+62 81234567891</a></span></h5>
                                </div>
                                <div class="col-lg-3 pt16 pb16">
                                    <p class="mb-2">Kirim email :</p>
                                    <h5 style="color: white;"><a style="color: inherit;" href="mailto:travelumroharrosyid@gmail.com">travelumroharrosyid@gmail.com</a></h5>
                                </div>
                                <div class="col-lg-3 pt16 pb16">
                                    <div class="s_social_media text-end no_icon_color o_not_editable text-center" data-snippet="s_social_media" data-name="Social Media" contenteditable="false">
                                        <p class="s_social_media_title d-block mb-2" contenteditable="true">Ikuti kami</p>
                                        <a style="color: white;" href="#" class="s_social_media_instagram" target="_blank">
                                            <i style="color: inherit;" class="fa fa-instagram m-1 o_editable_media"/>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                    <section class="s_text_block" data-snippet="s_text_block" data-name="Text">
                        <div class="container allow_columns">
                            <div class="s_hr pt16 pb16">
                                <hr class="w-100 mx-auto" style="border-top-width: 1px; border-top-style: solid; border-color: var(--600);"/>
                            </div>
                        </div>
                    </section>
                    <section class="s_text_block" data-snippet="s_text_block" data-name="Text">
                        <div class="container">
                            <div class="row align-items-center">
                                <div class="col-lg-2 pb16">
                                    <a href="#" class="o_footer_logo logo">
                                        <img src="/cdn_arrosyid/static/src/img/logo_travel.png" class="img-fluid" aria-label="Logo of MyCompany" title="MyCompany" role="img"/>
                                    </a>
                                </div>

                            </div>
                        </div>
                    </section>
                </div>
            </xpath>

        </template>
        
        <!-- Hide Copyright -->
        <template id="footer_no_copyright" inherit_id="website.layout" name="Footer No Copyright" active="True">
            <xpath expr="//div[hasclass('o_footer_copyright')]" position="before">
                <t t-set="no_copyright" t-value="True"/>
            </xpath>
        </template>

        <!-- Scroll to Top option -->
        <template id="option_footer_scrolltop" inherit_id="website.layout" active="True">
            <xpath expr="//div[@id='footer']" position="after">
                <div id="o_footer_scrolltop_wrapper" class="container h-0 d-flex align-items-center justify-content-center" >
                    <a id="o_footer_scrolltop"
                    role="button"
                    href="#top"
                    title="Scroll ke Atas"
                    class="btn btn-primary rounded-circle d-flex align-items-center justify-content-center"
                    style="background-color: white; border:none;">
                        <span class="fa fa-1x fa-chevron-up"  style="color: black"/>
                    </a>
                </div>
            </xpath>
        </template>
        
    </data>
</odoo>
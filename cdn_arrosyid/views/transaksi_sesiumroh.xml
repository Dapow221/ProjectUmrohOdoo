<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <!-- cdn.sesi.umroh tree view -->
        <record id="cdn_sesi_umroh_view_tree" model="ir.ui.view">
            <field name="name">cdn.sesi.umroh.view.tree</field>
            <field name="model">cdn.sesi.umroh</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="description"/>
                    <field name="paket_umroh_id"/>
                    <field name="pembimbing_id"/>
                    <field name="petugas_lapangan"/>
                    <field name="jumlah_jamaah"/>
                </tree>
            </field>
        </record>

        <!-- cdn.sesi.umroh form view -->
        <record id="cdn_sesi_umroh_view_form" model="ir.ui.view">
            <field name="name">cdn.sesi.umroh.view.form</field>
            <field name="model">cdn.sesi.umroh</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <!-- <button name="action_akan_datang" string="Akan Datang" type="object" class="oe_highlight" states="prosess"/> -->
                        <button name="action_prosess" string="Mulai Sesi Umroh" type="object" class="oe_highlight" states="akan_datang"/>
                        <button name="action_selesai" string="Tandai Selesai" type="object" class="oe_highlight" states="prosess"/>
                        <button name="action_batal_perjalanan" string="Batal" type="object" class="oe_highlight" states="prosess"/>
                        <field name="state" widget="statusbar" statusbar_visible="prosess,akan_datang,selesai,batal_perjalanan"/>
                    </header>
                        <sheet>
                            <group>
                                <field name="name"/>
                                <field name="description"/>
                                <field name="paket_umroh_id"/>
                                <field name="pembimbing_id"/>
                                <field name="maskapai_id"/>
                                <field name="hotel_id"/>
                                <field name="jumlah_jamaah"/>
                            </group>
                            <notebook>
                                <page name="petugas_lapangan" string="Petugas Lapangan">
                                    <field name="petugas_lapangan"/>
                                </page>
                                <page name="jammaah_ids" string="Jammaah">
                                    <field name="jammaah_ids"/>
                                </page>
                                <page name="rencana_perjalanan_ids" string="Rencana Perjalanan">
                                    <field name="rencana_perjalanan_ids"/>
                                </page>
                            </notebook>
                        </sheet>
                </form>
            </field>
        </record>


        <!-- cdn.sesi.umroh action window -->
        <record id="cdn_sesi_umroh_action" model="ir.actions.act_window">
            <field name="name">cdn.sesi.umroh.action</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">cdn.sesi.umroh</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Create your first item
                </p>
            </field>
        </record>
        <menuitem id="sesi_umroh_root_menu_act" name="Sesi Umroh" action="cdn_sesi_umroh_action" parent="travel_umroh_menu_categ" sequence="10"/>
        <!-- This Menu Item must have a parent and an action -->
    </data>
</odoo>
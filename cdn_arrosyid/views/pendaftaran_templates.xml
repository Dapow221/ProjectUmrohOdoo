<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="pendaftaran_list" name="Pendaftaran">&lt;!DOCTYPE html&gt;
        <html>
            <head>
                <title>Pendaftaran</title>

                <!-- CDN Asset -->
                <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous"/>
                <script type="text/javascript" src="https://code.jquery.com/jquery-3.4.1.min.js"></script>

                <!-- Custom Asset -->
                <link rel="stylesheet" href="/cdn_arrosyid/static/src/css/custom.css"/>
                <script type="text/javascript" src="/cdn_arrosyid/static/src/js/custom.js"></script>
            </head>
        </html>
        <body>
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <h2 class="pendaftaran-title">Pendaftaran</h2>
                        <table class="table table-hover">
                            <tr>
                                <th>Nama</th>
                            </tr>
                            <t t-foreach="pendaftarans" t-as="pendaftaran">
                                <tr>
                                    <td>
                                        <t t-esc="pendaftaran.nama" />
                                    </td>
                                    <td>
                                        <button class="btn btn-sm btn-danger btn-delete-pendaftaran" t-att-data-pendaftaran-number="pendaftaran.nama">Delete</button>
                                    </td>
                                </tr>
                            </t>
                        </table>
                    </div>
                </div>
            </div>
        </body>
    </template>

    </odoo>
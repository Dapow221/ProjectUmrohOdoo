<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="report_identitas_manifes_jamaah_document">
        <t t-foreach="docs" t-as="doc">
            <t t-call="web.basic_layout">
                <div class="page">
                    <center>
                        <h1>
                            <span>Identitas Manifes Jamaah</span>
                        </h1>
                    </center>
                    <div>
                        <h2 t-field="docs.paket_umroh_id.name"></h2>
                        <h3 t-field="docs.name"></h3>
                        <h3>Mulai <span t-field="docs.tanggal_berangkat"></span> s/d <span t-field="docs.tanggal_pulang"></span></h3>
                    </div>
                    <table class="table">
                        <tbody>
                            <tr>
                                <td><strong>No</strong></td>
                                <td><strong>Nama Jamaah</strong></td>
                                <td><strong>Nomor Paspor</strong></td>
                                <td><strong>No Referensi</strong></td>
                                <td><strong>Tanggal Lahir</strong></td>
                                <td><strong>Jenis Kelamin</strong></td>
                            </tr>
                            <t t-set="counter" t-value="1"/>
                            <t t-foreach="doc.jammaah_ids" t-as="data">
                                <tr>
                                    <td><span t-esc="counter"/></td>
                                    <td><span t-field="data.nama"/></td>
                                    <td><span t-field="data.paspor"/></td>
                                    <td><span t-field="data.referensi"/></td>
                                    <td><span t-field="data.tgl_lahir"/></td>
                                    <td><span t-field="data.jenis_kel"/></td>
                                </tr>
                                <t t-set="counter" t-value="counter + 1"/>
                            </t>
                        </tbody>
                    </table>
                </div>
            </t>
        </t>
    </template>
</odoo>

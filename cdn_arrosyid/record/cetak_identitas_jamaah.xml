<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="report_identitas_jamaah_document">
        <t t-foreach="docs" t-as="doc">
            <t t-call="web.basic_layout">
                <div class="page" style="display: flex; justify-content: center; align-items: center; height: 100vh; padding: 20px;">
                    <div class="id-card-container" style="width: 100%; max-width: 350px; box-shadow: 0 4px 8px rgba(0,0,0,0.1); border-radius: 10px; overflow: hidden; border: 1px solid #ddd;">
                        <div class="id-card" style="padding: 20px; background: #f9f9f9;">
                            <div class="id-card-header" style="font-size: 20px; font-weight: bold; text-align: center; margin-bottom: 20px; background: #007bff; color: white; padding: 10px 0; border-radius: 10px 10px 0 0;">
                                Card Umroh
                            </div>
                            <div class="id-card-body" style="font-size: 14px; line-height: 1.6;">
                                <table style="width: 100%;">
                                    <tr>
                                        <td style="padding: 5px 0;"><strong>Nama:</strong></td>
                                        <td style="padding: 5px 0;"><span t-field="doc.partner_id.name"/></td>
                                    </tr>
                                    <tr>
                                        <td style="padding: 5px 0;"><strong>Nomor Paspor:</strong></td>
                                        <td style="padding: 5px 0;"><span t-field="doc.paspor"/></td>
                                    </tr>
                                    <tr>
                                        <td style="padding: 5px 0;"><strong>Pembimbing:</strong></td>
                                        <td style="padding: 5px 0;"><span t-field="doc.pembimbing"/></td>
                                    </tr>
                                    <tr>
                                        <td style="padding: 5px 0;"><strong>Tanggal Lahir:</strong></td>
                                        <td style="padding: 5px 0;"><span t-field="doc.tgl_lahir"/></td>
                                    </tr>
                                    <tr>
                                        <td style="padding: 5px 0;"><strong>Jenis Kelamin:</strong></td>
                                        <td style="padding: 5px 0;"><span t-field="doc.jenis_kel"/></td>
                                    </tr>
                                </table>
                            </div>
                            <div class="id-card-footer" style="font-size: 14px; text-align: center; margin-top: 20px; color: #555;">
                                Selamat Menunaikan Ibadah Umroh
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </t>
    </template>
</odoo>
